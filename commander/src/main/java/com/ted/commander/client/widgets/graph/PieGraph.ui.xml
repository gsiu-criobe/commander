<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with field="style" type="com.petecode.common.client.widget.paper.PaperStyleBundle"/>


    <g:HTMLPanel>
        <div class="horizontal start layout" style="width:100%">
            <g:SimplePanel ui:field="canvas"/>
            <div class="vertical center center-center layout" style="width:316px">
                <div class="paper-font-caption" style="padding-bottom:16px"><ui:msg>Legend</ui:msg></div>
                <g:VerticalPanel ui:field="legendPanel"/>
            </div>
        </div>
    </g:HTMLPanel>




</ui:UiBinder>