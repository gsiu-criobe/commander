<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:pw='urn:import:com.vaadin.polymer.paper.widget'

             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with field="style" type="com.petecode.common.client.widget.paper.PaperStyleBundle"/>


    <g:HTMLPanel addStyleNames="{style.css.fullWidth}">

        <style is="custom-style">
            :host {
            width: 100%;
            }
            paper-material {
            background-color: #FFF;
            width:100%;
            max-width: 600px;
            min-width: 320px;
            padding:16px;
            margin: auto;
            margin-top: 24px;
            }

        </style>

        <paper-material class="vertical center layout">
            <div class="horizontal center layout" style="width:100%">
                <div style="width:32px"></div>
                <div class="flex"></div>
                <div class="paper-font-title">
                    <ui:msg>Account Members</ui:msg>
                </div>
                <div class="flex"></div>
                <pw:PaperIconButton icon="icons:add" ui:field="addButton" visible="true"/>
            </div>
            <g:VerticalPanel ui:field="memberList" addStyleNames="{style.css.fullWidth}"/>
        </paper-material>
    </g:HTMLPanel>


</ui:UiBinder>