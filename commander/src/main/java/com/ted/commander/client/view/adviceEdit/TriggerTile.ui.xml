<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <ui:with field="style" type="com.petecode.common.client.widget.paper.PaperStyleBundle"/>

    <g:HTMLPanel addStyleNames="{style.css.clickable}">
        <style is="custom-style">
            .item {
                padding:8px;
                margin:0;
                width: calc( 98% - 32px);
                margin:auto;

            }

            .item:hover {
                background-color:var(--divider-color)
            }




        </style>
        <paper-material class="item {style.css.clickable}" elevation="0" ui:field="mainPanel">
            <div class="horizontal center justified layout">
                <div class="paper-font-body1" ui:field="textField"></div>
                <div style="width:32px">
                    <iron-icon style="width:32px" icon="create"></iron-icon>
                </div>
            </div>
            <paper-ripple></paper-ripple>
        </paper-material>
    </g:HTMLPanel>


</ui:UiBinder>