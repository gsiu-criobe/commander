<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.petecode.common.client.widget.paper'
             xmlns:iw='urn:import:com.vaadin.polymer.iron.widget'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">


    <ui:with field="style" type="com.petecode.common.client.widget.paper.PaperStyleBundle"/>

    <g:HTMLPanel>
        <style is="custom-style">
            paper-material{
                width: calc(100% - 16px);
            }

            .hoverable{
                padding: 8px;
            }

            .hoverable:hover{
                background-color: var(--divider-color);
            }
        </style>

        <paper-material elevation="0" class="horizontal center justified layout hoverable {style.css.clickable}" ui:field="mainPanel">
            <p:PaperLabel ui:field="accountNameField" width="200px">
                <ui:msg>Name</ui:msg>
            </p:PaperLabel>

            <p:PaperLabel ui:field="accountRoleField" width="100px">
                <ui:msg>Role</ui:msg>
            </p:PaperLabel>

            <iw:IronIcon icon="icons:chevron-right" ui:field="rightChevronButton" visible="true" />
            <paper-ripple></paper-ripple>
        </paper-material>
    </g:HTMLPanel>

</ui:UiBinder>